{
  "manifest_version": 2,

  "name": "Ansel",
  "description": "This extension applies simple CSS to clean up the Chrome image preview",
  "author" : "Grant Toeppen",
  "version": "0.0.0.1",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    },
    "default_title": "Ansel"
  },
  "content_scripts": [
    {
      "matches": [
        "file:///*.jpg",
        "file:///*.jpeg",
        "file:///*.png",
        "file:///*.gif",
        "file:///*.tiff",
        "file:///*.webp",
        "file:///*.svg",
        "file:///*.svgz",
        "file:///*.bmp",
        "file:///*.dib",
        "file:///*.ico",
        "*://*/*.jpg",
        "*://*/*.jpeg",
        "*://*/*.png",
        "*://*/*.gif",
        "*://*/*.tiff",
        "*://*/*.webp",
        "*://*/*.svg",
        "*://*/*.svgz",
        "*://*/*.bmp",
        "*://*/*.dib",
        "*://*/*.ico"
      ],
      "css": [
        "style.css"
      ]
    }
  ]
}